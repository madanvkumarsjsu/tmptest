{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string"
        }
    },
    "variables": { 
        "infavirtualnetworkPrefix": "10.0.0.0/16",
        "infavirtualnetworkSubnet1Name": "Subnet-1",
        "infavirtualnetworkSubnet1Prefix": "10.0.0.0/24"
    },
    "resources": [
        {
            "name": "infavirtualnetwork",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-05-01-preview",
            "dependsOn": [ ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('infavirtualnetworkPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('infavirtualnetworkSubnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('infavirtualnetworkSubnet1Prefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "vnetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
            "type": "string"
        }
    }
}